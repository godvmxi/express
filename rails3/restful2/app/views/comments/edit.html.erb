<h1>Editing comment</h1>

<%= error_messages_for :comment %>

<% form_for([@article,@comment]) do |f| %>
  <p>
    <b>Comment</b><br />
    <%= f.text_area :comment %>
  </p>

  <p>
    <b>Article</b><br />
    <%= f.text_field :article_id %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', article_path(@article) %>
