<% form_for :comment, 
            :url => comment_url, 
            :article_id => @article_id, 
            :html => {:method => :put} do |form| %>
<fieldset>
  <legend>Edit this Comment</legend>
	
  <%= render :partial => 'form', :object => form %>

  <p>
    <%= submit_tag "Save" %>
  </p>
</fieldset>
<% end %>
